{
  "name": "@unveiler.io/react-native-client",
  "version": "3.0.1-beta.2",
  "description": "React Native client to integrate with the Unveiler API.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "unveiler-react-native-client.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.idea"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "format": "yarn lint --fix",
    "prepare": "bob build && yarn apollo:generate",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods",
    "apollo:generate": "graphql-codegen --config codegen.yml"
  },
  "keywords": [
    "react-native",
    "android"
  ],
  "repository": "https://github.com/unveiler-io/react-native-client",
  "author": "Adriaan Knapen <hi@aknapen.nl> (https://unveiler.io)",
  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/unveiler-io/react-native-client/issues"
  },
  "homepage": "https://github.com/unveiler-io/react-native-client#README",
  "dependencies": {
    "@apollo/client": "^3.6.2",
    "@xstate/react": "^1.3.4",
    "graphql": "^15.5.3",
    "xstate": "^4.20.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.2",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@react-native-community/bob": "^0.17.1",
    "@react-native-community/eslint-config": "^3.0.1",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/jest": "^26.0.24",
    "@types/react": "^16.14.0",
    "@types/react-native": "^0.63.50",
    "commitlint": "^9.1.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.66.2",
    "pod-install": "^0.1.32",
    "prettier": "^2.6.0",
    "react": "^16.14.0",
    "react-native": "^0.64.2",
    "release-it": "^14.13.1",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5",
          "printWidth": 110
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "src/generated/graphql.tsx"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 110
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
